
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="/styles/style.css">


<section class="body_main">
    <%- include("partials/header.ejs") %>
    <div class="main_container">
        <h1>Edit Blog</h1>
        <form action="/submit-edit" method="POST">
            <input type="hidden" name="id" value="<%= data.id %>" />
            <input name="name" type="text" placeholder="Name" value="<%= data.name %>" />
            <input name="title" type="text" placeholder="Title" value="<%= data.title %>" />
            <textarea name="blog" placeholder="Blog content"><%= data.blog %></textarea>
            <button class="submit-button" type="submit" value="Submit">Update Blog</button>
        </form>
</div>
</section>